# Configuración del servidor
PORT=8080
ENVIRONMENT=development

# Base de datos
DATABASE_PATH=alerts.db

# API de Bitcoin
BITCOIN_API_URL=https://api.coindesk.com/v1/bpi/currentprice.json

# Intervalo de verificación de precios
CHECK_INTERVAL=30s

# Intervalo de actualización del porcentaje de cambio (desde Binance)
PERCENTAGE_UPDATE_INTERVAL=1m

# Configuración de Email (Gmail ejemplo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
FROM_EMAIL=tu-email@gmail.com

# Configuración de notificaciones
ENABLE_DESKTOP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEB_PUSH_NOTIFICATIONS=true
ENABLE_TELEGRAM_NOTIFICATIONS=false

# Configuración de Telegram Bot
# 1. Buscar @BotFather en Telegram
# 2. Enviar /newbot y seguir instrucciones  
# 3. Copiar el TOKEN del bot aquí
# 4. Para obtener CHAT_ID: enviar mensaje al bot y visitar:
#    https://api.telegram.org/bot<TOKEN>/getUpdates
#    Buscar "chat":{"id": XXXXXX}
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

